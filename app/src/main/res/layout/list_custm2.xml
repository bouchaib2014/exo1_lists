<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground"
    android:descendantFocusability="blocksDescendants">

    <RadioButton xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radio_text_view_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#AAFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_edit_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ttest"
        android:src="@drawable/ic_edit"
        android:background="@android:color/transparent"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/radio_text_view_list"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/image_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:minHeight="100px"
        android:minWidth="100px"
        android:paddingRight="15px"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/cntr"
        app:layout_constraintLeft_toRightOf="@id/image_contact"
        app:layout_constraintTop_toTopOf="@id/image_contact" />

    <TextView
        android:id="@+id/cntr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/age_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        app:layout_constraintLeft_toRightOf="@id/image_contact"
        app:layout_constraintTop_toBottomOf="@id/cntr" />


</android.support.constraint.ConstraintLayout>
